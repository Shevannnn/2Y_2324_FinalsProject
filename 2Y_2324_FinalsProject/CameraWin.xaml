<Window x:Class="_2Y_2324_FinalsProject.CameraWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_2Y_2324_FinalsProject"
        mc:Ignorable="d"
        Title="CameraWin" Height="450" Width="800" Closing="Window_Closing">
    <Grid Loaded="Grid_Loaded">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
            <Label Content="Camera" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top"/>
            <ComboBox x:Name="cmbCamera" Text="Start" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Width="420"/>
            <Image x:Name="pic" HorizontalAlignment="Left" Height="330" Margin="0,0,0,0" VerticalAlignment="Top" Width="450"/>
            <Button x:Name="btnStart" Content="Start" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Click="btnStart_Click"/>
            <Button x:Name="btnCaptureImage" Content="Capture" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Click="btnCaptureImage_Click"/>
        </StackPanel>
    </Grid>
</Window>

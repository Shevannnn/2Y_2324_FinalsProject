<Window x:Class="_2Y_2324_FinalsProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_2Y_2324_FinalsProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.Resources>
        <Style x:Key="TxtBoxStyle" TargetType="TextBox">
            <Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontFamily" Value="Verdana"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="10">
                            <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="BtnStyle" TargetType="Button">
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Aqua"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <StackPanel x:Name="pnlLogin" Margin="20" HorizontalAlignment="Center" Orientation="Vertical" Visibility="Collapsed">
            <Image Source="/Images/logo.jpg" Margin="0 0 0 0" Width="200" Height="220"/>
            <TextBlock Text="Username" FontSize="15" Margin="0 -15 115 -5" Width="77" HorizontalAlignment="Center" FontFamily="verdana" />
            <TextBox x:Name="txtUser" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontFamily="verdana" FontSize="13" Margin="0 5 0 0" Style="{StaticResource TxtBoxStyle}"/>
            <TextBlock Text="Password" FontSize="15" Margin="0 5 115 -10" Width="77" HorizontalAlignment="Center" FontFamily="verdana" />
            <TextBox x:Name="txtPass" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontFamily="verdana" FontSize="13"  Margin="0 10 0 0" Style="{StaticResource TxtBoxStyle}"/>
            <Button x:Name="btnLogin" Content="Login" Margin="0 20 0 0" Style="{StaticResource BtnStyle}"/>
        </StackPanel>

        <StackPanel x:Name="pnlInventory" Margin="20 20 20 20" Orientation="Vertical" Visibility="Collapsed">
            <StackPanel  Orientation="Horizontal">
                <TextBlock Margin="310 0 0 0" Width="110" Height="30" Text="Patient List" TextAlignment="Center" FontSize="20"/>
                <TextBlock Margin="100 0 0 0" Width="110" Height="30" Text="Logged In:" TextAlignment="Center" FontSize="15"/>
                <TextBlock Margin="-50 0 0 0" Width="110" Height="30" Text="Name" TextAlignment="Center" FontSize="15"/>
                <Button x:Name="btnLogout" Visibility="Visible" Margin="0 0 0 0" FontSize="12" Width="70" Height="25" Background="OrangeRed" Content="Logout" Style="{StaticResource BtnStyle}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Margin="130 0 0 0" Width="110" Height="30" Text="Search:" TextAlignment="Center" FontSize="20"/>
                <TextBox x:Name="txtSearch" Width="300" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontSize="13" Margin="0 5 0 0" Style="{StaticResource TxtBoxStyle}"/>
            </StackPanel>
            <ListView x:Name="lvPatients" Margin="0,10,0,0" Width="501" Height="310" BorderThickness="0" >
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ID" Width="100" DisplayMemberBinding="{Binding Column1}" />
                        <GridViewColumn Header="Name" Width="200" DisplayMemberBinding="{Binding Column2}" />
                        <GridViewColumn Header="Status" Width="100" DisplayMemberBinding="{Binding Column3}" />
                        <GridViewColumn Header="Doctor" Width="100" DisplayMemberBinding="{Binding Column5}" />
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>

        <StackPanel x:Name="pnlHeader" Visibility="Visible">
            <TextBlock Text="Header Text" Margin="0 10 0 0" HorizontalAlignment="Center" FontSize="20" Background="Transparent"/>
        </StackPanel>
        
        <StackPanel x:Name="pnlEditInfo" Margin="0 40 0 0" Orientation="Horizontal" Visibility="Visible" >
            <StackPanel Orientation="Vertical" >
                <Image x:Name="imgPatient" Source="/Images/BlankImage.png" Margin="100 0 0 0" Width="200" Height="200"/>
                <Button Visibility="Visible" x:Name="btnTakeImg" Margin="100 0 0 0" Content="Take Image" FontFamily="verdana" Background="#FFFFAE80" FontSize="13" BorderBrush="Transparent" Width="100" Height="20" Style="{StaticResource BtnStyle}" />
                <Button Visibility="Visible" x:Name="btnUploadPic" Margin="100 10 0 0" Content="Upload Image" FontFamily="verdana" Background="#FFFFAE80" FontSize="13" BorderBrush="Transparent" Width="100" Height="20" Style="{StaticResource BtnStyle}" />
            </StackPanel>
            <StackPanel Margin= "50 27 0 0"  Orientation="Vertical" >
                <TextBlock Text="Name" Margin="0 0 0 0" HorizontalAlignment="Center" Background="Transparent"/>
                <TextBox x:Name="txtName" Margin="0 0 0 0" Background="White" Width="200" Height="20"/>
                <TextBlock Text="Sex" Margin="0 0 0 0" HorizontalAlignment="Center" Background="Transparent"/>
                <TextBox x:Name="txtSex" Margin="0 0 0 0" Background="White" Width="200" Height="20"/>
                <TextBlock Text="Age" Margin="0 0 0 0" HorizontalAlignment="Center" Background="Transparent"/>
                <TextBox x:Name="txtAge" Margin="0 0 0 0" Background="White" Width="200" Height="20"/>
                <TextBlock Text="Date of Birth" Margin="0 0 0 0" HorizontalAlignment="Center" Background="Transparent"/>
                <TextBox x:Name="txtDob" Margin="0 0 0 0" Background="White" Width="200" Height="20"/>
                <TextBlock Text="BloodType" Margin="0 0 0 0" HorizontalAlignment="Center" Background="Transparent"/>
                <ComboBox x:Name="cbBloodType" Margin="0 0 0 0" Background="White" Width="95" Height="20"  >
                    <ComboBoxItem Content="A-"/>
                    <ComboBoxItem Content="A+"/>
                    <ComboBoxItem Content="B-"/>
                    <ComboBoxItem Content="B+"/>
                    <ComboBoxItem Content="AB-"/>
                    <ComboBoxItem Content="AB+"/>
                    <ComboBoxItem Content="O-"/>
                    <ComboBoxItem Content="O+"/>
                </ComboBox>
                <TextBlock Text="Emergency Contact Name" Margin="0 0 0 0" HorizontalAlignment="Center" Background="Transparent"/>
                <TextBox x:Name="txtECName" Margin="0 0 0 0" Background="White" Width="200" Height="20"/>
                <TextBlock Text="Emergency Contact Number" Margin="0 0 0 0" HorizontalAlignment="Center" Background="Transparent"/>
                <TextBox x:Name="txtECNum" Margin="0 0 0 0" Background="White" Width="200" Height="20"/>
                <TextBlock Text="Patient Status" Margin="0 0 0 0" HorizontalAlignment="Center" Background="Transparent"/>
                <ComboBox x:Name="cbPStatus" Margin="0 0 0 0" Background="White" Width="95" Height="20"  >
                    <ComboBoxItem Content="Admitted"/>
                    <ComboBoxItem Content="Discharged"/>
                    <ComboBoxItem Content="Critical"/>
                    <ComboBoxItem Content="In treatment"/>
                    <ComboBoxItem Content="Recovered"/>
                </ComboBox>
                <Button Visibility="Visible" x:Name="btnSaveChanges" Margin="0 10 0 0" Content="Save Changes" FontFamily="verdana" Background="#FFFFAE80" FontSize="13" BorderBrush="Transparent" Width="100" Height="20" Style="{StaticResource BtnStyle}" />
                <Button Visibility="Visible" x:Name="btnAddNew" Margin="0 10 0 0" Content="Add Patient" FontFamily="verdana" Background="#FFFFAE80" FontSize="13" BorderBrush="Transparent" Width="100" Height="20" Style="{StaticResource BtnStyle}" />
            </StackPanel>
        </StackPanel>

        <StackPanel x:Name="pnlPatientInfo" Margin="0 40 0 0" Orientation="Horizontal" Visibility="Collapsed" >
            <StackPanel Orientation="Vertical" >
                <Image x:Name="imgPatient2" Source="/Images/BlankImage.png" Margin="100 0 0 0" Width="200" Height="200"/>
            </StackPanel>
            <StackPanel Margin= "50 30 0 0"  Orientation="Vertical" >
                <TextBlock Text="Name" Margin="0 0 0 0" HorizontalAlignment="Center" Background="Transparent"/>
                <TextBlock x:Name="pName" Text="insert text" Margin="0 0 0 0" HorizontalAlignment="Center" Background="Transparent"/>
                <TextBlock Text="Sex" Margin="0 0 0 0" HorizontalAlignment="Center" Background="Transparent"/>
                <TextBlock x:Name="pSex" Text="insert text" Margin="0 0 0 0" HorizontalAlignment="Center" Background="Transparent"/>
                <TextBlock Text="Age" Margin="0 0 0 0" HorizontalAlignment="Center" Background="Transparent"/>
                <TextBlock x:Name="pAge" Text="insert text" Margin="0 0 0 0" HorizontalAlignment="Center" Background="Transparent"/>
                <TextBlock Text="Date of Birth" Margin="0 0 0 0" HorizontalAlignment="Center" Background="Transparent"/>
                <TextBlock x:Name="pDob" Text="insert text" Margin="0 0 0 0" HorizontalAlignment="Center" Background="Transparent"/>
                <TextBlock Text="Blood Type" Margin="0 0 0 0" HorizontalAlignment="Center" Background="Transparent"/>
                <TextBlock x:Name="pBloodType" Text="insert text" Margin="0 0 0 0" HorizontalAlignment="Center" Background="Transparent"/>
                <TextBlock Text="Emergency Contact Name" Margin="0 0 0 0" HorizontalAlignment="Center" Background="Transparent"/>
                <TextBlock x:Name="pECName" Text="insert text" Margin="0 0 0 0" HorizontalAlignment="Center" Background="Transparent"/>
                <TextBlock Text="Emergency Contact Number" Margin="0 0 0 0" HorizontalAlignment="Center" Background="Transparent"/>
                <TextBlock x:Name="pECNum" Text="insert text" Margin="0 0 0 0" HorizontalAlignment="Center" Background="Transparent"/>
                <TextBlock Text="Patient Status" Margin="0 0 0 0" HorizontalAlignment="Center" Background="Transparent"/>
                <TextBlock x:Name="pStatus" Text="insert text" Margin="0 0 0 0" HorizontalAlignment="Center" Background="Transparent"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
